{
  "compilerOptions": {
    "lib": [
      "esnext"
    ],
    "outDir": "dist",
    "rootDirs": [
      "src",
      "tests"
    ],
    "target": "es2021",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-native",
    "baseUrl": "src",
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@/*": [
        "*"
      ],
      "@/tests/*": [
        "../tests/*"
      ]
    }
  },
  "extends": "expo/tsconfig.base"
}
